<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <!-- CSS only -->
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi'
      crossorigin='anonymous'
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3'
      crossorigin='anonymous'
      defer
    ></script>
    <title>Vehiculos</title>
  </head>
  <header class='mb-2'>
    <!-- As a heading -->
    <nav class='navbar bg-light'>
      <div class='container-fluid'>
        <span class='navbar-brand mb-0 h1'>Patrón Factory</span>
      </div>
    </nav>
  </header>
  <body>
    <form
      method='POST'
      class='mb-2 d-flex flex-row justify-content-center align-items-end gap-2'
    >
      <div>
        <label for=''>Vehiculo</label>
        <select
          class='form-select'
          aria-label='Default select example'
          name='type'
        >
          <option selected>Selecciona un vehiculo</option>
          <option value='car'>Carro</option>
          <option value='truck'>Camion</option>
          <option value='pickup'>Camioneta</option>
        </select>
      </div>

      <div>
        <label for='cylinderCapacity'>Cilindraje</label>
        <input
          type='number'
          class='form-control'
          name='cylinderCapacity'
          id='cylinderCapacity'
        />
      </div>

      <div>
        <label for='year'>Año</label>
        <input type='number' class='form-control' name='modelYear' id='year' />
      </div>

      <div>
        <label for='valuation'>Valuación</label>
        <input
          type='number'
          class='form-control'
          name='valuation'
          id='valuation'
        />
      </div>
      <button class='btn btn-primary'>Crear Vehículo</button>
    </form>
    <table class='table'>
      <thead>
        <tr>
          <th scope='col'>Capacidad</th>
          <th scope='col'>Año</th>
          <th scope='col'>Valuación</th>
          <th scope='col'>Valor matrícula</th>
        </tr>
      </thead>
      <tbody>
        {{#vehicles}}
          <tr scope='row'>
            <td>{{cylinderCapacity}}</td>
            <td>{{modelYear}}</td>
            <td>{{valuation}}</td>
            <td>{{currentValue}}</td>
          </tr>
        {{/vehicles}}
      </tbody>
    </table>
  </body>
</html>